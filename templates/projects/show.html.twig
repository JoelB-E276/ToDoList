{% extends 'base.html.twig' %}

{% block title %}Project{% endblock %}

{% block body %}
    <h1>Project</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ project.id }}</td>
            </tr>
            <tr>
                <th>Beginning</th>
                <td>{{ project.beginning ? project.beginning|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ project.status }}</td>
            </tr>
            <tr>
                <th>End</th>
                <td>{{ project.end ? project.end|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ project.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ project.content }}</td>
            </tr>
            <tr>
                <th>Archived</th>
                <td>{{ project.archived }}</td>
            </tr>
        </tbody>
    </table>

       {% for task in tasks %}
            <section class="project shadow-lg p-3 mb-5 bg-body rounded">
                <div>Début : {{ task.beginning ? task.beginning|date('d-m-Y') : '' }}</div>
                <div>Status : {{ task.status }}</div>
                <div>Achèvement : {{ task.end ? task.end|date('d-m-Y') : '' }}</div>
                <div>Type : {{ task.title }}</div>
                <div>Déscription : {{ task.content }}</div>
                <div>
                    <a href="{{ path('projects_show', {'id':task.id}) }}">show</a>
                    <a href="{{ path('projects_edit', {'id': task.id}) }}">edit</a>
                </div>
            </section>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
         </section> 

        {% endfor %}


    <a href="{{ path('projects_index') }}">back to list</a>

    <a href="{{ path('projects_edit', {'id': project.id}) }}">edit</a>

    {{ include('projects/_delete_form.html.twig') }}
{% endblock %} 
